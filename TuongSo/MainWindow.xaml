<Window x:Class="TuongSo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuongSo"
        xmlns:localView="clr-namespace:TuongSo.Views"
        xmlns:localVC="clr-namespace:TuongSo.ViewControlers"
        mc:Ignorable="d"
        MinWidth="500"
        Title="Tuong So" Height="550" Width="600"  >
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Window.DataContext>
        <localVC:MainWindowVC></localVC:MainWindowVC>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0">
            <localView:UserInput x:Name="userInput" Day="{Binding Path=Day, Mode=TwoWay}" Month="{Binding Path=Month, Mode=TwoWay}" Year="{Binding Path=Year, Mode=TwoWay}"  Background="AliceBlue" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
            <Button Click="CalculateFortune">Tinh Tuoi</Button>
            <Border BorderThickness="1" BorderBrush="#FF959595" Margin="0,10,0,0" >
                <localView:PyramidView Background="AliceBlue"  x:Name="pyramidView"  Day="{Binding Path=Day, Mode=TwoWay,  ElementName=userInput}" Month="{Binding Path=Month, Mode=TwoWay, ElementName=userInput}" Year="{Binding Path=Year, Mode=TwoWay ,ElementName=userInput}"
                                   Visibility="{Binding ShowPyramid, Converter={StaticResource BoolToVis}}" >
                </localView:PyramidView>
            </Border>
          
            <!--<ScrollViewer VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MaxHeight="200">
                <TextBox TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
            </ScrollViewer>-->
        </StackPanel>

        <Border BorderThickness="0" BorderBrush="AliceBlue"   Grid.Column="1">
            <DockPanel >
                <Label DockPanel.Dock="Top" Background="Beige"  HorizontalContentAlignment="Center" HorizontalAlignment="Stretch">Nam Tuoi</Label>
                <ScrollViewer Grid.Column="1"   Height="auto" Background="#FFDADADA" PreviewMouseWheel="ListViewScrollViewer_PreviewMouseWheel">
                    <ListView ItemsSource="{Binding YearResults}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Label>Tuoi:</Label>
                                    <Label  Content="{Binding Age}"></Label>
                                    <Label>Nam:</Label>
                                    <Label  Content="{Binding Year}"></Label>
                                    <Label>Tong:</Label>
                                    <Label Content="{Binding SumResult}"></Label>
                                    <Label>Van mang:</Label>
                                    <Label Content="{Binding YearStatus}"></Label>
                                    <Label Foreground="Red" Visibility="{Binding Path=IsAMajorYear, Converter={StaticResource BoolToVis}}">P</Label>
                                </StackPanel>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>

</Window>
